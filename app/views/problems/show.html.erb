<%- model_class = Problem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @problem.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @problem.desc %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              problems_path, :class => 'btn'  %>

  <%= link_to t('.comment', :default => t("helpers.links.comment")),
              build_path_comments_for(@problem), :class => 'btn' %>

  <%= link_to t('.vote', :default => t("helpers.links.vote")),
              build_path_votes_for(@problem), :class => 'btn' %>

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_problem_path(@problem), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              problem_path(@problem),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
