<%= link_to t('.comment', :default => t("helpers.links.comment")),
            build_path_comments_for(object), :class => 'btn btn-mini' %>

<%= link_to t('.vote', :default => t("helpers.links.vote")),
            build_path_votes_for(object), :class => 'btn btn-mini' %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
            build_path_to_edit_for(object), :class => 'btn btn-mini' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            build_path_to_destroy_for(object),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-mini btn-danger' %>
